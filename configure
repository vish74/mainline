#!/bin/sh
projectPath=$(dirname $0)
localConfigure=0
if test ${projectPath} = "."; then
  echo "Creating directory $(pwd)/build for out-of-source build..."
  mkdir -p build
  cd build
  projectPath=..
  localConfigure=1
fi

rm -f CMakeCache.txt
cmake ${projectPath}

if test ${localConfigure} -eq 1; then
  echo "Now run \"cd build\" to change to the build directory."
fi